[Unit]
Description="Parachain bootnode service"
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=10
User={{ cumulus_user }}
SyslogIdentifier={{ cumulus_service }}
LimitNOFILE={{ default_max_open_files_in_service }}
SyslogFacility=local7
KillSignal=SIGHUP
ExecStart={{ cumulus_base }}/{{ cumulus_client }} \
     --unsafe-rpc-external \
     --unsafe-ws-external \
     --rpc-cors=all \
     --port {{ cumulus_p2p_port }} \
     --rpc-port {{ cumulus_rpc_port }} \
     --execution wasm \
     --wasm-execution compiled \
     --pruning=archive \
     --db-cache {{ (ansible_memtotal_mb * 0.9) | int }}
     --base-path {{ cumulus_base }} \
     --no-prometheus \
     --no-mdns \
     --chain {{ cumulus_network }} \
     --name "{{ host_name.split('.')[0] }}" \
     --disable-log-color \
     --max-parallel-downloads 20 \
     --max-runtime-instances 16 \
     --out-peers 50 \
     --rpc-max-response-size 30 \
     --ws-max-connections 800
[Install]
WantedBy=multi-user.target
