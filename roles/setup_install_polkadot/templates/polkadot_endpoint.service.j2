[Unit]
Description=Polkadot Bootnode
After=network-online.target
Wants=network-online.target

[Service]
User={{ polkadot_user }}
Group={{ polkadot_group }}
ExecStart={{ polkadot_base }}/polkadot \
  --name "{{ host_name.split('.')[0] }}" \
  --chain {{ polkadot_network }} \
  --base-path {{ polkadot_base_path }} \
  --state-pruning {{ state_pruning | default(256) }} \
  --sync full \
  --listen-addr /ip6/::/tcp/{{ polkadot_p2p_port }} \
  --listen-addr /ip6/::/tcp/{{ polkadot_p2p_port_ws }} \
  --listen-addr /ip4/0.0.0.0/tcp/{{ polkadot_p2p_port }} \
  --listen-addr /ip4/0.0.0.0/tcp/{{ polkadot_p2p_port_ws }} \
  --public-addr /dns/{{ public_dns }}/tcp/{{ polkadot_p2p_port }} \
  --public-addr /dns/{{ public_dns }}/tcp/{{ polkadot_p2p_port_wss }}/wss \
  --wasm-execution Compiled \
  --execution native-else-wasm \
  --no-hardware-benchmarks \
  --ws-external \
  --rpc-external \
  --rpc-methods safe \
  --rpc-cors all \
  --allow-private-ipv4

Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
